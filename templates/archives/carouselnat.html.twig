<div class = "container">
    <div class="d-flex justify-content-center flex-column" style="height: 300px;">
        <div id="carousel{{edition_affichee.id}}" class="carousel slide" data-ride="carousel" >

            <div class="carousel-inner"style="width: 350px; height:250px !important;" >
                {% set i = 1 %}
                {% set idprec=0 %}

                {% for photo in photos %}

                    {% if photo.national == 'true' %}

                        {% if photo.equipe.id!=idprec%}
                            {% if i==1 %}

                                <div class="carousel-item active" data-interval="5000">

                                    <img src=" {{asset('/upload/photos/thumbs/'~photo.photo) }}"
                                                 alt="{{photo.equipe.TitreProjet}}" width="auto"  height="200">
                                        <div class="text>">

                                            <h6>{{photo.equipe.titreProjet }}</h6>

                                    </div>
                                    {#<center><div style="background:black;"> <font color="white" size="-2">photo {{i}}/{{n}}</font></div></center>#}
                                </div>
                                {% set idprec = photo.equipe.id %}
                            {% endif %}
                            {% if i>1 and i<26%}

                                <div class="carousel-item" >

                                    <img src=" {{asset('/upload/photos/thumbs/'~photo.photo) }}"
                                                  alt="{{photo.equipe.TitreProjet}}"  width="auto"  height="200" >
                                        <div class="text">

                                            <h6>{{photo.equipe.titreProjet }}</h6>
                                        </div>

                                    {#<center><div style="background:black"><font color="white" size="-1">{{photo.equipe.titreProjet}} </font><br> <font color="white" size="-2"> photo {{i}}/{{n}}></font></div></center>#}
                                </div>
                                {% set idprec = photo.equipe.id %}
                            {% endif %}
                            {% set i= i+1 %}
                        {% endif%}
                    {% endif %}
                {% endfor %}
            </div>


            <a class="carousel-control-prev" href="#carousel{{edition_affichee.id}}" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel{{edition_affichee.id}}" role="button" data-slide="next" >
                <span class="carousel-control-next-icon" aria-hidden="true" ></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
