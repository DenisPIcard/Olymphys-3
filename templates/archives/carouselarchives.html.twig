<div class = "container-fluid ">
    <div class="d-flex justify-content-center flex-column" style="height: auto;">
        <div id="carousel{{concours }}{{edition_affichee.id}}" class="carousel slide" data-ride="carousel" >
            <div class="carousel-inner"style="width:350px; height:250px !important;" bkgcolor="black">
                {% set i = 1 %}

                {% for photo in photoscarousel %}
                        {% if i==1 %}
                                <div class="carousel-item active" data-interval="5000">

                                    <div class="tex-center"><img src=" {{asset('upload/photos/thumbs/'~photo.photo) }}"
                                                 alt="{{photo.equipe.TitreProjet}}" width="auto"  height="200">
                                    </div>
                                    <div class="text>">

                                        <h6>{{photo.equipe.titreProjet }}</h6>

                                    </div>

                                </div>
                        {% endif %}
                        {% if i>1%}
                                <div class="carousel-item" >

                                    <div class="tex-center"><img src=" {{asset('upload/photos/thumbs/'~photo.photo) }}"
                                                  alt="{{photo.equipe.TitreProjet}}"  width="auto"  height="200" >
                                    </div>
                                    <div class="text>">

                                        <h6>{{photo.equipe.titreProjet }}</h6>

                                    </div>

                                </div>

                        {% endif %}
                        {% set i= i+1 %}

                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carousel{{ concours }}{{edition_affichee.id}}" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel{{ concours }}{{edition_affichee.id}}" role="button" data-slide="next" >
                <span class="carousel-control-next-icon" aria-hidden="true" ></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>