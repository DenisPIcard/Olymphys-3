<div class = "container-fluid ">


                <p></p>
                <div id="carousel{{concours }}{{edition_affichee.id}}" class="carousel slide " data-ride="carousel" >
                    <div class="d-flex align-items-center flex-column" style="height: auto;">
                    <div class="p-2 ">
                    <div class="carousel-inner black" style="width:200px !important; height:230px !important ;" >
                        {% set i = 1 %}

                        {% for photo in photoscarousel %}

                                {% if i==1 %}

                                        <div class="carousel-item active" data-interval="5000">

                                            <div class="text-center"><img src=" {{asset('upload/photos/thumbs/'~photo.photo) }}"
                                                         alt="{{photo.equipe.TitreProjet}}" class="img-fluid">
                                            </div>
                                            <div class="text-center>">

                                                <div class="smallsize">{{photo.equipe.titreProjet }}</div>

                                            </div>

                                        </div>
                                {% endif %}
                                {% if i>1%}
                                        <div class="carousel-item" >

                                            <div class="text-center"><img src=" {{asset('upload/photos/thumbs/'~photo.photo) }}"
                                                          alt="{{photo.equipe.TitreProjet}}" class="img-fluid" >
                                            </div>
                                            <div class="text-center>">

                                                <div class="smallsize">{{photo.equipe.titreProjet }}</div>

                                            </div>

                                        </div>

                                {% endif %}
                                {% set i= i+1 %}

                        {% endfor %}


                    <a class="carousel-control-prev" href="#carousel{{ concours }}{{edition_affichee.id}}" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel{{ concours }}{{edition_affichee.id}}" role="button" data-slide="next" >
                        <span class="carousel-control-next-icon" aria-hidden="true" ></span>
                        <span class="sr-only">Next</span>
                    </a>
                    </div>
                    </div>
                </div>
            </div>

</div>
