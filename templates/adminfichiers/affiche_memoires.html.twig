{% extends "base.html.twig" %}
{% block title %} Liste des fichiers{% endblock %}



{% block titre3 %}
    {% if concours=='cia' %}
   Liste des memoires des équipes non sélectionnées lors des épreuves interacadémiques
    {% endif %}
    {% if concours=='cn' %}
    Liste des memoires des épreuves nationales 
    
    {% endif %}
   
    de la {{edition.ed}}<sup>e</sup> édition.
    {% endblock %}


{% block body %}
    <div class="well">
    
                          
        {% for fichiers in fichiersequipes %}
               {% set  equipe = fichiers[0].equipe %}
             <div class="col">
                
                  {% set memoire=null %}{% set annexe=null %} {% set  resume= null %}
                    {% for fichier in fichiers %}
                                {% if fichier.typefichier==0 %}
                                  {% set memoire=fichier %}
                                {% endif %}
                                 {% if fichier.typefichier==1 %}
                                   {% set annexe=fichier %}                        
                               {% endif %}
                               {% if fichier.typefichier==2 %}
                                    {% set resume=fichier %}
                                {%endif %}
                    
                  {% endfor %}  
                 {%  if concours=='cn' %}
                {{equipe.lettre}} -
                {% endif %} 
                "{{equipe.titreProjet}}",  <h8><i>Lycée {{equipe.rneId.nom}}, {{equipe.rneId.commune}} </i> </h8>:
                  {% if memoire is not null %}
                     <a href="{{asset('/fichiers/memoires/'~memoire.fichier)}}">Mémoire</a>
                   {% endif %}
                     {% if annexe is not null or resume is not null %}
                              
                                 (
                    
                    {% if annexe is not null %}
                              <a href="{{asset('/fichiers/memoires/'~annexe.fichier)}}">annexe, </a>
                    {% endif %}
                    {% if resume is not null %}
                               <a href="{{asset('/fichiers/resumes/'~resume.fichier)}}">resumé</a>   
                  {% endif %}
                  )
                
                  {% endif %}
                </div>
         {% endfor %}           
              
           
           
        </div>
          
 
    <div class="well" >
       
            <center><a href="{{ path('fichiers_choixedition',{num_type_fichier : 0})}}" >Retour au choix des fichiers </a></center>
        
    </div>
       
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js" ></script> 
        {#<script src="./coverage/bs-custom-file-input.js"></script>#}
        <script>
            {# $(document).ready(function () {
                bsCustomFileInput.init()
            })#}
                bsCustomFileInput.init()
        </script>
    {% endblock %}  
{% endblock %}


